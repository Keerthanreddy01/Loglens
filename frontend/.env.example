# ============================================
# LogLens Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ============================================

# --------------------------------------------
# WorkOS Authentication (REQUIRED)
# --------------------------------------------
# Get these from: https://dashboard.workos.com/

# WorkOS Client ID
WORKOS_CLIENT_ID=your_workos_client_id_here

# WorkOS API Key (CRITICAL: Keep this secret!)
WORKOS_API_KEY=your_workos_api_key_here

# WorkOS Redirect URI
# Local: http://localhost:3000/api/auth/callback
# Production: https://yourdomain.com/api/auth/callback
WORKOS_REDIRECT_URI=http://localhost:3000/api/auth/callback

# WorkOS Cookie Password (must be 32+ characters)
# Generate with: openssl rand -base64 32
WORKOS_COOKIE_PASSWORD=generate_a_secure_32_character_password_here

# --------------------------------------------
# Application Configuration (OPTIONAL)
# --------------------------------------------

# Application Base URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment (development | production | test)
NODE_ENV=development

# --------------------------------------------
# Analytics & Monitoring (OPTIONAL)
# --------------------------------------------

# Vercel Analytics (if deploying to Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Custom Analytics
NEXT_PUBLIC_ANALYTICS_KEY=

# --------------------------------------------
# Feature Flags (OPTIONAL)
# --------------------------------------------

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# --------------------------------------------
# Security Notes
# --------------------------------------------
# 1. NEVER commit .env files to Git
# 2. Use different WorkOS projects for dev/staging/prod
# 3. Rotate API keys if exposed
# 4. Use strong cookie passwords (32+ characters)
# 5. Set WORKOS_REDIRECT_URI to match your deployment URL
